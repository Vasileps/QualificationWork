<Button x:Class="MessengerApp.Controls.SymbolTextButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:MessengerApp.Controls"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Style="{DynamicResource HyperLinkButton}"
        Margin="5"
        HorizontalContentAlignment="Left"
        Background="Transparent">
    <TextBlock FontSize="20"
               Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}">
        <Run FontFamily="Segoe UI Symbol"
             x:Name="SymbolRun"/>
        <Run x:Name="TextRun"/>
    </TextBlock>
</Button>
